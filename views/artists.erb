<h1>All Sales Vinyl</h1>

<h3>Available Artists</h3>

<% if @artists.any? %>
  <ul>
  <% @artists.each do |artist| %>
    <li><a href="/artists/<%= artist.id %>"><%= artist.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no artists to display.</p>
<% end %>

<a href="/artists/new">Add a new artist</a>

<form action="/results" method="post"> 
  <div class="form-group">
    <label for="search">Search Artists or Albums</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
<p><a href="/albums">View Albums</a></p>