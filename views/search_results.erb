
<h1>Search Results</h1>


<% if @albums %>

  <ul>
  <% @albums.each do |album| %>
    <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
  <% end %>
  </ul>

<% elsif @artists %>

  <ul>
  <% @artists.each do |artist| %>
    <li><a href="/artists/<%= artist.id %>"><%= artist.name %></a></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no matches to display.</p>
<% end %>